<%= render 'layouts/flash' %>
<h1>List of categories</h1>
<h2>Top level categories(level 1)</h2>
<% @category_level1.each do |categoryl1| %>
  <p><%= categoryl1.name %> | parent category: None |
    <%= link_to 'Delete category', category_path(categoryl1), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %><p>
<% end %>  
<hr>	
<h2>Categories level 2</h2>
<% @category_level2.each do |categoryl2| %>
  <p><%= categoryl2.name %>| parent category: <%= find_category_name(categoryl2.parent) %> |
  	<%= link_to 'Delete category', category_path(categoryl2),  
                            method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %><p>
<% end %>  
<hr>
<h2>Categories level 3</h2>
<% @category_level3.each do |categoryl3| %>
  <p><%= categoryl3.name %>| parent category: <%= find_category_name(categoryl3.parent) %> |
  	<%= link_to 'Delete category', category_path(categoryl3),  
                            method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %><p>
<% end %> 
