<%= render 'layouts/flash' %>
<h1>Review for <%= link_to @product.name, product_path(@product) %></h1>
<h2>The product has <%= pluralize(@reviews.size, 'review') %></h2>
<ol>
  <% @product.reviews.each do |review| %>
    <li>
      <p>
        Review by: <%= link_to review.user.name, user_url(review.user) %> on <%= review.created_at.to_date %>
      </p>	
      <p>
        Rating: <%= place_rating(review.stars)%>
      </p> 
      <p>
        Comment: <%= review.comment %>
      </p>
    </li>
    <hr>
  <% end %>
</ol>
<%= link_to 'Back', product_path(@product), class: 'button' %>

